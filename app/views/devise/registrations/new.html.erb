<h2>Sign up</h2>

<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <p><%= f.label :email %>
  <%= f.text_field :email, :class=>"text_input_field"  %></p>

  <p><%= f.label :password %>
  <%= f.password_field :password, :class=>"text_input_field"  %></p>

  <p><%= f.label :password_confirmation %>
  <%= f.password_field :password_confirmation, :class=>"text_input_field"  %></p>

  <%= f.submit "Sign up", :class=>'input_button' %>
  <%= render :partial => "devise/shared/links" %>
<% end %>

