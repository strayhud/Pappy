<div id="main_area">
    
    <h1>Opportunity Tracker</h1>

    <table id="index_table">
        <tr>
            <th>ACCOUNT</th>
            <th>OPPORTUNITY</th>
            <th>DATE</th>
        </tr>

        <% @qforms.each do |qform| %>
        <tr>
            <td><%= link_to qform.account, qform %></td>
            <td><%= link_to qform.opportunity, qform %></td>
            <td><%= link_to qform.created_at, qform %></td>
        </tr>
        <% end %>
    </table>

    <br />

    <%= link_to 'New Request', new_qform_path, :class=>"link_button"  %>
</div>