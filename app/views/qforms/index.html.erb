<div id="main_area">
    
    <h1>Demo Request System</h1>

    <table id="index_table">
        <tr>
            <th>Customer</th>
            <th>Purpose</th>
            <th>Date</th>
        </tr>

        <% @qforms.each do |qform| %>
        <tr>
            <td><%= link_to qform.customer, qform %></td>
            <td><%= qform.purpose %></td>
            <td><%= qform.created_at %></td>
        </tr>
        <% end %>
    </table>

    <br />

    <%= link_to 'New Request', new_qform_path, :class=>"link_button"  %>
</div>